    &lt;label for="message"&gt;Message&lt;/label&gt;
    &lt;textarea class="uc-form-parts" id="message"&gt;&lt;/textarea&gt;
  &lt;/div&gt;
  &lt;div class="uc-form-parts-unit"&gt;
    &lt;button class="uc-btn _primary"&gt;&lt;a href="#"&gt;Send&lt;/a&gt;&lt;/button&gt;
  &lt;/div&gt;
