    &lt;div class="uc-form-group"&gt;
      &lt;input type="text" class="uc-form-parts" id="name" required&gt;
      &lt;button class="uc-btn"&gt;&lt;span&gt;Search&lt;/span&gt;&lt;/button&gt;
    &lt;/div&gt;
